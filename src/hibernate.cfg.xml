<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://meyer.pre-alpha.com/extempdb?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=utf8</property>
		<property name="connection.username">extempdb</property>
		<property name="connection.password"></property>

		<!-- JDBC connection pool (C3PO) -->
		<property name="connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">100</property> <!-- seconds -->
		<property name="hibernate.c3p0.min_size">2</property>
		<property name="hibernate.c3p0.max_size">2</property>
		<property name="hibernate.c3p0.max_statements">0</property>
		<property name="hibernate.c3p0.timeout">100</property> <!-- seconds -->
		<property name="hibernate.c3p0.validate">false</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">update</property>

		<!-- Session management -->
		<property name="current_session_context_class">managed</property>

		<!-- Entity classes -->
		<mapping class="com.prealpha.extempdb.server.domain.Article" />
		<mapping class="com.prealpha.extempdb.server.domain.Source" />
		<mapping class="com.prealpha.extempdb.server.domain.Tag" />
		<mapping class="com.prealpha.extempdb.server.domain.TagMapping" />
		<mapping class="com.prealpha.extempdb.server.domain.TagMappingAction" />
		<mapping class="com.prealpha.extempdb.server.domain.User" />
		<mapping class="com.prealpha.extempdb.server.domain.UserSession" />

	</session-factory>

</hibernate-configuration>
