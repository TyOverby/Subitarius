<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:browse="urn:import:com.prealpha.extempdb.client.browse">

	<ui:with field="res" type="com.prealpha.extempdb.client.CommonResources" />
	<ui:with field="msg"
		type="com.prealpha.extempdb.client.browse.BrowseMessages" />

	<ui:style>
		@external .gwt-SuggestBox;
		.topPanel,.tagInputBox {
			width: 100%;
		}
		
		.topPanel>* {
			line-height: 50px;
		}
		
		.browseHeading {
			width: 100px;
		}
		
		.tagInputBox {
			margin-left: 10px;
		}
		
		.tagInputBox .gwt-SuggestBox {
			font-size: 17px;
			height: 26px;
			padding: 2px 6px;
			width: 80%;
		}
	</ui:style>

	<g:VerticalPanel addStyleNames="{res.style.contentSection}">
		<g:HTMLPanel>
			<table class="{style.topPanel}">
				<tr>
					<td class="{style.browseHeading}">
						<g:Label addStyleNames="{res.style.heading}" text="{msg.heading}" />
					</td>

					<td>
						<g:Widget addStyleNames="{style.tagInputBox}" ui:field="inputWidget" />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>

		<browse:MappingStateSelector ui:field="stateSelector" />

		<g:Label>&nbsp;</g:Label>

		<g:Widget ui:field="articleTable" />

		<c:AbstractPager addStyleNames="{res.style.center}"
			ui:field="pager" />
	</g:VerticalPanel>

</ui:UiBinder>