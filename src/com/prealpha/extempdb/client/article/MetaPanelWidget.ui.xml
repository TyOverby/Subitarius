<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="msg"
		type="com.prealpha.extempdb.client.article.ArticleMessages" />

	<ui:style>
		.metaSectionEven,.metaSectionOdd {
			padding: 5px;
		}
		
		.metaSectionEven {
			background-color: #b3b6c5;
		}
		
		.metaSectionOdd {
			background-color: #c7cbe0;
		}
		
		.metaLabel {
			font-weight: bold;
		}
		
		.tagsPanel {
			width: 100%;
		}
	</ui:style>

	<g:VerticalPanel>
		<g:HTMLPanel addStyleNames="{style.metaSectionEven}">
			<g:Label addStyleNames="{style.metaLabel}" text="{msg.idLabel}" />
			<g:Label ui:field="idLabel" />
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames="{style.metaSectionOdd}">
			<g:Label addStyleNames="{style.metaLabel}" text="{msg.dateLabel}" />
			<g:Label ui:field="dateLabel" />
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames="{style.metaSectionEven}">
			<g:Label addStyleNames="{style.metaLabel}" text="{msg.retrievalDateLabel}" />
			<g:Label ui:field="retrievalDateLabel" />
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames="{style.metaSectionOdd}">
			<g:Label addStyleNames="{style.metaLabel}" text="{msg.tagsLabel}" />
			<g:VerticalPanel addStyleNames="{style.tagsPanel}"
				ui:field="tagsPanel" />
		</g:HTMLPanel>
	</g:VerticalPanel>

</ui:UiBinder>