<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="res"
		type="com.prealpha.extempdb.client.common.CommonResources" />
	<ui:with field="msg" type="com.prealpha.extempdb.client.main.MainMessages" />

	<g:HTMLPanel>
		<table>
			<tr>
				<td>
					<g:VerticalPanel>
						<g:HTMLPanel addStyleNames="{res.style.contentSection}">
							<span class="{res.style.heading}">
								<g:Label text="{msg.aboutHeading}" />
							</span>
							<g:Label text="{msg.aboutText}" />
						</g:HTMLPanel>

						<g:HTMLPanel addStyleNames="{res.style.contentSection}">
							<span class="{res.style.heading}">
								<g:Label text="{msg.usageHeading}" />
							</span>
							<g:Label text="{msg.usageText}" />
						</g:HTMLPanel>
					</g:VerticalPanel>
				</td>

				<td style="vertical-align: top;">
					<g:SimplePanel ui:field="loginPanel" />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>