<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="res"
		type="com.prealpha.extempdb.client.common.CommonResources" />
	<ui:with field="msg" type="com.prealpha.extempdb.client.main.MainMessages" />

	<g:HTMLPanel addStyleNames="{res.style.contentSection}">
		<table cellspacing="0">
			<tr>
				<td colspan="2" class="{res.style.heading}">
					<g:Label text="{msg.logInHeading}" />
				</td>
			</tr>

			<tr>
				<td colspan="2">
					<g:Label ui:field="statusLabel" />
				</td>
			</tr>

			<tr>
				<td>
					<g:Label text="{msg.username}" />
				</td>

				<td>
					<g:TextBox ui:field="nameBox" />
				</td>
			</tr>

			<tr>
				<td>
					<g:Label text="{msg.password}" />
				</td>

				<td>
					<g:PasswordTextBox ui:field="passwordBox" />
				</td>
			</tr>

			<tr>
				<td colspan="2" class="{res.style.center}">
					<g:Button text="{msg.submit}" ui:field="submitButton" />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>