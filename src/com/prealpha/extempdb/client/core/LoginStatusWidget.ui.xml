<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="msg" type="com.prealpha.extempdb.client.core.CoreMessages" />

	<ui:style>
		.status {
			font-size: 25px;
			margin: 0 5px;
		}
		
		.links {
			font-size: 75%;
			text-align: right;
			vertical-align: middle;
		}
	</ui:style>

	<g:HTMLPanel>
		<table>
			<tr>
				<td class="{style.status}">
					<g:HTML text="{msg.loading}" ui:field="statusLabel" />
				</td>

				<td>&nbsp;</td>

				<td class="{style.links}">
					<g:Hyperlink targetHistoryToken="SETTINGS" text="{msg.settings}" />
					<g:Anchor href="javascript:" text="{msg.logOut}" ui:field="logOutLink" />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>