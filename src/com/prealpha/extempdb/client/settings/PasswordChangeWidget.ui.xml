<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="res"
		type="com.prealpha.extempdb.client.common.CommonResources" />
	<ui:with field="msg"
		type="com.prealpha.extempdb.client.settings.SettingsMessages" />

	<g:HTMLPanel>
		<table>
			<tr>
				<td colspan="2">
					<g:Label addStyleNames="{res.style.heading}" text="{msg.changePassword}" />
				</td>
			</tr>

			<tr>
				<td>
					<g:Label text="{msg.currentPassword}" />
				</td>
				<td>
					<g:PasswordTextBox ui:field="currentPasswordBox" />
				</td>
			</tr>

			<tr>
				<td>
					<g:Label text="{msg.newPassword}" />
				</td>
				<td>
					<g:PasswordTextBox ui:field="newPasswordBox" />
				</td>
			</tr>

			<tr>
				<td>
					<g:Label text="{msg.confirmPassword}" />
				</td>
				<td>
					<g:PasswordTextBox ui:field="confirmPasswordBox" />
				</td>
			</tr>

			<tr>
				<td colspan="2">
					<g:Label ui:field="statusLabel" />
				</td>
			</tr>

			<tr>
				<td colspan="2">
					<g:Button text="{msg.submitButton}" ui:field="submitButton" />
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>
