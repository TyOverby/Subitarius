<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="res" type="com.subitarius.instance.client.CommonResources" />
	<ui:with field="msg"
		type="com.subitarius.instance.client.main.MainMessages" />

	<g:VerticalPanel>
		<g:HTMLPanel addStyleNames="{res.style.contentSection}">
			<span class="{res.style.heading}">
				<g:Label text="{msg.aboutHeading}" />
			</span>
			<g:Label text="{msg.aboutText}" />
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames="{res.style.contentSection}">
			<span class="{res.style.heading}">
				<g:Label text="{msg.usageHeading}" />
			</span>
			<g:Label text="{msg.usageText}" />
		</g:HTMLPanel>

		<g:HTMLPanel addStyleNames="{res.style.contentSection}">
			<span class="{res.style.heading}">
				<g:Label text="{msg.controlsHeading}" />
			</span>
			<g:Label text="{msg.controlsText}" />
			<g:Button text="{msg.fetchButton}" ui:field="fetchButton" />
		</g:HTMLPanel>

		<g:Widget addStyleNames="{res.style.contentSection}"
			ui:field="addArticleWidget" />
	</g:VerticalPanel>

</ui:UiBinder>
